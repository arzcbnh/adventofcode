#!/usr/bin/env sh

CC="gcc -g -std=c99 -pedantic -W -Wall -Werror"
PROGRAM=""
INPUT="input"
VALGRIND="false"

for arg in "$@"; do
	case "$arg" in
		*.c)
			PROGRAM="$arg"
			;;
		-t)
			INPUT="test"
			;;
		-v)
			VALGRIND="true"
			;;
	esac
done

if [ -z "$PROGRAM" ]; then
	echo "Error: no program selected"
	exit 1
fi

eval "$CC $PROGRAM strmanip.c memmanage.c -lm" && ./a.out < "$INPUT" && {
	if [ "$VALGRIND" = "true" ]; then
		head -n 1 > /dev/null
		valgrind -s --leak-check=full --track-origins=yes --max-stackframe=10000000 ./a.out < "$INPUT"
	fi
}
